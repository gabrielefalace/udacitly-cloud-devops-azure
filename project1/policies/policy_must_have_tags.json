{
    "type": "Microsoft.Authorization/policyDefinitions",
    "name": "tagging-policy",
    "properties": {
        "mode": "indexed",
        "displayName": "Tagging Policy",
        "description": "forces every resource to have at least 1 tagges",
        "policyRule": {
            "if": { 
                "allOf": [
                    {
                        "field": "tags",
                        "equals": "[]"    
                    }
                ]  
            },
            "then": {
                "effect": "deny"
            } 
        }
    }
    
 
}